= form_with model: [@gpx, @topographic_map], local:true do |f|
  - if @topographic_map.errors.any?
    #error_explanation
      %h2
        = pluralize(@topographic_map.errors.count, "error")
        prohibited
        this article from being saved:
      %ul
        - @topographic_map.errors.full_messages.each do |msg|
          %li= msg
  = f.label :chart_title, "Chart Title"
  = f.text_field :chart_title
  %br
  = f.label :size, "Choose Portrait Size"
  = f.select :size, options_for_select(ElevationGraph.sizes.keys.map { |size| [size.humanize, size]}, @topographic_map.size)
  %br
  %br
  = f.submit
