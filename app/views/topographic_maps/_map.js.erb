var gpxFilePath = "<%=url_for(@topographic_map.gpx.file)%>";
L.mapbox.accessToken = "<%= Rails.application.config.mapbox_token %>"


var map = L.mapbox.map('map')
    .addLayer(L.mapbox.styleLayer('mapbox://styles/mapbox/outdoors-v11'));


var runLayer = omnivore.gpx(gpxFilePath)
    .on('ready', function() {
    map.fitBounds(runLayer.getBounds());
    map.options.showTileBoundaries(false);
    })
    .addTo(map);
