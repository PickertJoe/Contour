//This header might be too verbose, but I ran into routing issues after I made the order model
//A nested resource under user
= form_with model: [current_user, Order.new(graph: @elevation_graph)] do |f|
  = f.hidden_field :graph_type
  = f.hidden_field :graph_id
  %article
  %label Price: $#{f.object.price_for_graph.to_f/100}
  - if flash[:error].present?
    #error_explanation
    %p= flash[:error]
  %br
  %script.stripe-button{ src: "https://checkout.stripe.com/checkout.js", data: {amount: f.object.price_for_graph, description: @elevation_graph.chart_title, key: Rails.configuration.stripe[:publishable_key]}}

