.container-fluid
  %h1.text-center.text-header Elevation profile for #{@elevation_graph.chart_title}
  .row.text-center
    .col-8
      =link_to "Profile Index", gpx_elevation_graphs_path(@elevation_graph.gpx_id), :class => 'body-link'
      #elevation_container
        :javascript
          #{render 'plot.js'}
    .col.text-background
      %h2 Want to see this profile in your home?







      = form_with model: Order.new(graph: @elevation_graph) do |f|
        = f.hidden_field :graph_type
        = f.hidden_field :graph_id
        %article
          %label Price: $#{f.object.price_for_graph.to_f/100}
          - if flash[:error].present?
            #error_explanation
              %p= flash[:error]
        %script.stripe-button{ src: "https://checkout.stripe.com/checkout.js", data: {amount: f.object.price_for_graph, description: @elevation_graph.chart_title, key: Rails.configuration.stripe[:publishable_key]}}

