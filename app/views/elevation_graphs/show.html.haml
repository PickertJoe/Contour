.container-fluid
  %h1.text-center.text-header Elevation profile for #{@elevation_graph.chart_title}
  .row
    .col-8.text-center
      =link_to "Profile Index", gpx_elevation_graphs_path(@elevation_graph.gpx_id), :class => 'body-link'
      #elevation_container
        :javascript
          #{render 'plot.js'}
    .col
      = form_tag charges_path do
        %article
          - if flash[:error].present?
            #error_explanation
              %p= flash[:error]
        %script.stripe-button{"data-amount" => "500", "data-description" => "A month's subscription", "data-key" => "#{Rails.configuration.stripe[:publishable_key]}", "data-locale" => "auto", :src => "https://checkout.stripe.com/checkout.js"}
