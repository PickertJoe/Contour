Highcharts.setOptions({
    lang: {
        thousandsSep: ','
    }
});

Highcharts.chart('elevation_container', {
        title: {
            text: '<%=@elevation_graph.chart_title%>'
        },
        xAxis: {
            title: {
                text: '<%=@elevation_graph.x_title%>'
            },
            type: 'datetime'
        },
        yAxis: {
            labels: {
                format: '{value:,.0f}'
            },
            title: {
                text: '<%=@elevation_graph.y_title%>'
            }
        },
        label: {
            enabled: false
        },
        legend: {
            enabled: false
        },
        series: [{
            data: <%= @data %>,
            name: "Elevation"
        }],
        tooltip: {
            valueDecimals: 2
        },
        responsive: {
            rules: [{
                condition: {
                    maxWidth: 500
                },
            chartOptions: {
                legend: {
                    layout: 'horizontal',
                    align: 'center',
                    verticalAlign: 'bottom'
                }
            }
        }]
    }
});
