Highcharts.chart('elevation_container', {
        title: {
            text: '<%=@elevation_graph.chart_title%>'
        },
        xAxis: {
            title: {
                text: '<%=@elevation_graph.x_title%>'
            },
            type: 'datetime'
        },
        yAxis: {
            title: {
                text: '<%=@elevation_graph.y_title%>'
            }
        },
        legend: {
            enabled: false
        },
        series: [{
            data: <%= @data %>
        }],
        responsive: {
            rules: [{
                condition: {
                    maxWidth: 500
                },
            chartOptions: {
                legend: {
                    layout: 'horizontal',
                    align: 'center',
                    verticalAlign: 'bottom'
                }
            }
        }]
    }
});
